<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar_main"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.transcode.smartcity101p2.view.KanitTextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/change_password_email"
                android:textColor="@color/brow" />

            <com.transcode.smartcity101p2.view.KanitTextView
                android:id="@+id/email_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rounded_corner_button_bg_gray"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.transcode.smartcity101p2.view.KanitTextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/change_password_o_pass"
                android:textColor="@color/brow" />

            <EditText
                android:id="@+id/old_password_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rounded_corner_textbox_bg_gray_tran"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.transcode.smartcity101p2.view.KanitTextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/change_password_n_pass"
                android:textColor="@color/brow" />

            <EditText
                android:id="@+id/new_password_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rounded_corner_textbox_bg_gray_tran"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.transcode.smartcity101p2.view.KanitTextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/change_password_c_pass"
                android:textColor="@color/brow" />

            <EditText
                android:id="@+id/c_password_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rounded_corner_textbox_bg_gray_tran"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <com.transcode.smartcity101p2.view.KanitTextView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rounded_corner_button_bg_market_red"
                android:gravity="center"
                android:text="@string/change_password_change"
                android:textColor="@color/white"
                android:textSize="@dimen/text_header_size"
                android:textStyle="bold" />

        </FrameLayout>
    </LinearLayout>
</LinearLayout>