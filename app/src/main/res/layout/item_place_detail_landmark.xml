<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner_bg_white"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/landmark_layout_outofrange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <com.transcode.smartcity101p2.view.KanitTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="สถานที่นี้มีแสตมป์"
                android:textColor="@color/purple" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/out_range" />

            <com.transcode.smartcity101p2.view.KanitTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="พิชิตแลนด์มาร์คเพื่อรับแสตมป์ !!"
                android:textColor="@color/purple" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/landmark_layout_checked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.transcode.smartcity101p2.view.KanitTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="คุณได้พิชิตแลนด์มาร์คแล้ว !!"
                android:textColor="@color/purple" />


            <ImageView
                android:id="@+id/landmark_image_checked"
                android:layout_width="100dp"
                android:layout_height="100dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/landmark_layout_checkin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <com.transcode.smartcity101p2.view.KanitTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="พิชิตแลนด์มาร์คเลย"
                android:textColor="@color/purple" />

            <ImageView
                android:id="@+id/landmark_image_checkin"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <com.transcode.smartcity101p2.view.KanitTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="รับแสตมป์"
                android:textColor="@color/purple" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>