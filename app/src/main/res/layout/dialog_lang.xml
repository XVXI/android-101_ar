<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/dl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_top_bg_gray"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.transcode.smartcity101p2.view.KanitTextBoldView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/common_select_lang"
                android:textColor="@color/black" />

            <com.transcode.smartcity101p2.view.KanitTextBoldView
                android:id="@+id/bt_done"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right"
                android:minWidth="50dp"
                android:text="@string/ok_text"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/bt_th"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.transcode.smartcity101p2.view.KanitTextBoldView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ภาษาไทย"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal_size" />

                <ImageView
                    android:id="@+id/bt_th_check"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@android:drawable/checkbox_on_background" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/bt_en"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.transcode.smartcity101p2.view.KanitTextBoldView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="English"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal_size" />

                <ImageView
                    android:id="@+id/bt_en_check"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@android:drawable/checkbox_on_background" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/bt_zh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.transcode.smartcity101p2.view.KanitTextBoldView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="中文语言"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal_size" />

                <ImageView
                    android:id="@+id/bt_zh_check"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@android:drawable/checkbox_on_background" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/b_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@color/black" />
    </LinearLayout>
</FrameLayout>