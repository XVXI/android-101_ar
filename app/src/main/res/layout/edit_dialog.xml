<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/rounded_corner_callphone_header_purple"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <com.transcode.smartcity101p2.view.KanitTextView
            android:id="@+id/dl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="แก้ไข"
            android:textColor="@color/white"
            android:textSize="@dimen/text_header_size"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_setting" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_callphone_bg_white">

        <LinearLayout
            android:id="@+id/select_edit_layout"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.transcode.smartcity101p2.view.KanitTextView
                android:id="@+id/dl_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_button_bg_dark_purple"
                android:gravity="center"
                android:text="แก้ไขข้อมูลส่วนตัว"
                android:textColor="@color/white"
                android:textSize="@dimen/text_button_size"
                android:textStyle="bold" />

            <com.transcode.smartcity101p2.view.KanitTextView
                android:id="@+id/dl_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_button_bg_purple"
                android:gravity="center"
                android:text="เปลี่ยนรหัสผ่าน"
                android:textColor="@color/white"
                android:textSize="@dimen/text_button_size"
                android:textStyle="bold" />

            <com.transcode.smartcity101p2.view.KanitTextView
                android:id="@+id/dl_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_buttom_lr_cancel_red"
                android:gravity="center"
                android:text="ยกเลิก"
                android:textColor="@color/white"
                android:textSize="@dimen/text_button_size"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>